<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.cwfkm.bga.dao.SysPostyDao">
	<select id="findPageByHot" resultType="com.bga.pojo.SysPostyItemVo">
		select id,title,user_name userName,created_time createdTime,last_reply_name lastReplyName,
		last_reply_time lastReplyTime 
		from sys_posty order by hot_point desc limit 
		<choose>
			<when test="pageIndex != null">
				#{pageIndex},#{pageSize}
			</when>
			<otherwise>
				0,5
			</otherwise>
		</choose>
	</select>
	<select id="findPostysByUserId"
		resultType="com.bga.common.vo.SysPostyVo">
		select *
		from sys_posty where user_id=#{userId} order by
		created_time desc limit #{pageIndex},#{pageSize}
	</select>
	<update id="insertContent">
		insert into sys_posty
		values(#{id},#{content},#{title},
		#{userId},
		#{userName},
		#{boardId},
		#{isQuality},
		#{isTop},
		#{createdTime},
		#{modifiedTime},
		#{lastReplyTime},
		#{lastReplyName},
		#{hotPoint},
		'1')
	</update>
</mapper>